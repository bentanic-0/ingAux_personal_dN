<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ServiPuntos.Mobile.Views.TenantsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ServiPuntos.Mobile.ViewModels"
    xmlns:dto="clr-namespace:ServiPuntos.Core.DTOs;assembly=ServiPuntos.Core"
    Title="Tenants">

    <CollectionView
        ItemsSource="{Binding Tenants}"
        IsRefreshing="{Binding IsBusy}"
        RefreshCommand="{Binding LoadTenantsCommand}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="dto:TenantDto">
                <Frame Margin="10"
                        Padding="10">
                    <Label Text="{Binding Name}"
                            FontSize="Medium"/>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
