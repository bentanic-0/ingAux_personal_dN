<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ServiPuntos.Mobile.ViewModels"
    x:Class="ServiPuntos.Mobile.Views.TenantSelectorPage">

    <ContentPage.BindingContext>
        <vm:TenantSelectorViewModel/>
    </ContentPage.BindingContext>

    <StackLayout Padding="30"
            Spacing="20">
        <Label Text="Selecciona tu cadena de estaciÃ³n"
                FontSize="Large"
                HorizontalOptions="Center"/>
        <CollectionView ItemsSource="{Binding Tenants}"
                SelectionMode="Single"
                SelectedItem="{Binding SelectedTenant}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10"
                            Margin="5"
                            BorderColor="{Binding PrimaryColor}">
                        <StackLayout Orientation="Horizontal"
                                Spacing="10">
                            <Image Source="{Binding LogoUrl}"
                                    HeightRequest="40"
                                    WidthRequest="40"/>
                            <Label Text="{Binding Name}"
                                    FontAttributes="Bold"
                                    FontSize="Medium"
                                    VerticalOptions="Center"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Continuar"
                Command="{Binding ContinueCommand}"
                IsEnabled="{Binding SelectedTenant, Converter={StaticResource NullToBoolConverter}}"/>
    </StackLayout>
</ContentPage>
